		<form class="scroll_total" action="#" method="post">
			<div class="name"><input type="text" name="" value="@李华"></div>
			<div class="state"><input type="text" name="" value="给客户远程演示软件应用"></div>
			<div class="file">
				<div class="file_pic"></div>
				<div class="upload"><input type="file" name="doc" id="picPath" value=""></div>
			</div>
			<div class="time"  id='result'></div>
			<div class="contact"><span>联系人：</span><input type="text" name="" value="李鸣13859687758"></div>
			<div class="scroll_voice">
		    <div id='msg-list'>   
			</div>
			<pre id='h' style="display: none;"></pre>  
		<script id='msg-template' type="text/template">		 
			<% for(var i in record){ var item=record[i]; %>
				<div class="msg-item <%= (item.sender=='self'?' msg-item-self':'') %>" msg-type='<%=(item.type)%>' msg-content='<%=(item.content)%>'>
					<div class="msg-content">
						<div class="msg-content-inner">
							<% if(item.type=='text' ) { %>
								<%=( item.content|| '&nbsp;&nbsp;') %>
									<% } else if(item.type=='sound' ) { %>
										<span class="mui-icon mui-icon-mic" style="font-size: 30px;font-weight: bold;"></span>
										<span class="play-state">点击播放</span>
										<% } %> 
						</div>
					</div>
				</div>
				<% } %>
		</script>			
		<div id='msg-text' style="display: none;"></div>
		<button id='msg-sound' type="button" class='input-sound'>按住说话</button>
		<div id='sound-alert' class="rprogress">
		<div id="audio_tips" class="rsalert">手指上滑，取消发送</div>
		</div>
		
			</div>
			
			<div class="bottom_function">
		    <div class="line">
		    <div class="line-txt">
		    <a href="#">
		    <img src="../images/icon_kehu.png" /><span>客户：</span>
